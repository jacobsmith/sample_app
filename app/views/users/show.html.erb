<% provide(:title, @user.name) %>
<p></p>
<div class="row">
  <aside class="span3">
    <section>
      <h4>
        <%= link_to @user.name, current_user %>
      </h4>
      <h6>  <%= link_to "Edit Profile", edit_user_path(current_user) %> |  <%= link_to "Log Out", signout_path, method: "delete" %> </h6>
      <hr>
      
    </section>
  </aside>

  <div class="span8">
    <% if @user.campaigns.any? %>
      <h3>Campaigns (<%= @user.campaigns.count %>)</h3>
      <span><%= link_to 'Create New Campaign', new_campaign_path %></span>
        <ol class="campaigns">
          <%= render @campaigns %>
        </ol>
        <%= will_paginate @campaigns %>
    <% else %>
      <span><%= link_to 'Create a New Campaign', new_campaign_path %> 
      </span><br>
      <span> Want to create a holiday or end of year gift card campaign for our fabulous teachers? Start here. </span>
    <% end %>
  </div>
</div>

