<p id="notice"><%= notice %></p>



<div>
  <h3> <%= @campaign.title %> </h3>
  <h5> End Date: <%= @campaign.end_date %></h5>
  <h5> Created by: <%= @campaign.user.name %></h5>
  <body> <%= @campaign.description %></body>
</div>


  <% if @user.recipients.any? %>
    <p class="recipients">
      <%= render @recipients %>
    </p>
    <%= will_paginate @recipients %>
  <% else %>
    <p>Next step: add some <%= link_to 'recipients', new_recipient_path %> to your giftcard campaign!</p>
  <% end %>
