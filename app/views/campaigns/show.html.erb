<p id="notice"><%= notice %></p>
<div class="row">
  <aside class="span3">
  <% if @user %>
    <section>
      <h4>
        <%= link_to @user.name, current_user %>
      </h4>
      <h6>  <%= link_to "Edit Profile", edit_user_path(current_user) %> |  <%= link_to "Log Out", signout_path, method: "delete" %> </h6>
    </section>
    <% end %>
    <section>
      <div id="cart">
        <%= render @cart %>
      </div>
    </section>
  </aside>

  <div class="span8">
  <div>
    <h3> <%= @campaign.title %> </h3>
    <h5> End Date: <%= @campaign.end_date %></h5>
    <h5> Created by: <%= @campaign.user.name %></h5>
    <body> <%= @campaign.description %></body>
    <div class="alert" align="center">Its easy! Find your teacher, pick an amount to gift, and make their day.<br>Gifting is usually tax deductible. Check with your accountant to be sure.</div> 
  </div>
  <% if @recipients.any? %>
    <p class="recipients">
      <%= render @recipients %>
    </p>
  <% else %>
    <br>
    <p>Add some <%= link_to 'recipients', new_recipient_path %> to your giftcard campaign!</p>

    
  <% end %>
</div>
</div>

