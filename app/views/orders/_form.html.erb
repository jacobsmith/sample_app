<%= form_for(@order) do |f| %>
  <div  class="payment-errors">&nbsp;</div>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>
      <ul>
        <% @order.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <h4>Order Information </h4>
  <div class="field">
    <%= f.label :name %> <em>Your name will be printed on the recipient's gift card greeting.</em><br>
    <%= f.text_field :name, size: 40 %>
  </div>
  <div class="field"> 
    <%= f.label :email %><em>We will email you a receipt of this order. We will not use your email for any other purpose.</em>  <br>
    <%= f.email_field :email, size: 40 %>
  </div>
  <%#= f.hidden_field :stripe_token %>
<!-- these fields are disabled before submission and are never transmitted back to rails -->
    <div class="well">
      Credit card details are sent directly to our payment processor Stripe. No credit card information is ever stored on ThankTheTeacher.com. <br><br>
    
  <div class="field">
    <%= label_tag :credit_card_number %>
    <div class="input">
      <input type="text" class="field" data-stripe="number" />
    </div>
  </div>
  <div class="clearfix">
    <%= label_tag :cvv, "Security code (CVC)" %>
    <div class="input">
      <input type="text" class="field small" data-stripe="cvc"/>
    </div>
  </div>
  <div class="clearfix">
    <%= label_tag :expiration_date %>
    <div class="input">
      <select data-stripe="exp-month">
        <% Array(1..12).each do |month| %>
          <option value="<%= month %>"><%= month %></option>
        <% end %>
      </select>
      <select data-stripe="exp-year">
        <% Array(Date.today.year..(Date.today.year+25)).each do |year| %>
          <option value="<%= year %>"><%= year %></option>
        <% end %>
      </select>
    </div>
  </div>
</div>
  <div> 
    <%= f.submit 'Place Order' %>
  </div>
<% end %>


