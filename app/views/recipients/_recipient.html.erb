<tr>
  <td>
    <%= recipient.first_name %>
  </td>
  <td width="100">
    <%= recipient.last_name %>
  </td>
  <td width="120">
    <%= recipient.title %>
  </td>

  <% [1,5,10,25,50].each do |value| %>
    <td width="60" class="button-container">
      <%= button_to "$#{value}.00", line_items_path(recipient_id: recipient, quantity: value), remote: true, class: "btn-mini btn-primary" %>
    </td>
  <% end %>
</tr>
